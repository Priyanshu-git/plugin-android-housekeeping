<idea-plugin>
    <id>com.nexxlabs.housekeeping</id>
    <name>Housekeeping</name>
    <version>1.0.0</version>
    <vendor>Your Team / Your Name</vendor>
    <vendor email="user@example.com" url="https://example.com">Internal Tools</vendor>

    <description><![CDATA[
    On-demand unused code and resource analyzer for Android developers.
    ]]></description>

    <!-- Dependencies on modules available in Android Studio -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
            id="Housekeeping"
            factoryClass="com.example.housekeeping.ui.HousekeepingToolWindowFactory"
            anchor="right"/>
    </extensions>

    <actions>
        <group id="Housekeeping.Group" text="Housekeeping" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>

            <action id="FindUnusedMethods"
                class="com.example.housekeeping.actions.FindUnusedMethodsAction"
                text="Find unused methods"/>

            <action id="FindUnusedClasses"
                class="com.housekeeping.actions.FindUnusedClassesAction"
                text="Find unused classes"/>

            <action id="FindUnusedResources"
                class="com.example.housekeeping.actions.FindUnusedResourcesAction"
                text="Find unused resources"/>
        </group>
    </actions>
</idea-plugin>